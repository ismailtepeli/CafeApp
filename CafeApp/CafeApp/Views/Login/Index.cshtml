
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="container">
    <div class="row">
        <section class="sectionLogin col-md-6">
            <div class="col-md-12 text-md-center card-header">
                <h3 class="LoginHeader"> Cafe App</h3>
            </div>
            <div class="col-md-12 formArea card-body">
                <div class="form-group">
                    <input type="email" class="form-control col-md-12" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Email">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control col-md-12" placeholder="Password">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-block btn-primary">Login</button>
                    <a href="javascript:void(0;)"class="btn btn-block btn-outline-dark" style="color:#fff;">Register</a>
                     
                </div>
            </div>

        </section>
    </div>
</div>
